---
interface Props {
  title?: string;
  subtitle?: string;
  id?: string;
  background?: 'white' | 'tan' | 'light-green' | 'light-purple';
  padding?: 'sm' | 'md' | 'lg';
}

const {
  title,
  subtitle,
  id,
  background = 'white',
  padding = 'md'
} = Astro.props;

const bgClasses = {
  white: 'bg-white',
  tan: 'bg-tan',
  'light-green': 'bg-light-green',
  'light-purple': 'bg-light-purple'
};

const paddingClasses = {
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-20',
  lg: 'py-16 md:py-28'
};
---

<section id={id} class={`${bgClasses[background]} ${paddingClasses[padding]}`}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    {(title || subtitle) && (
      <div class="text-center mb-12">
        {title && (
          <h2 class="font-headline font-bold text-2xl md:text-3xl text-charcoal mb-4">{title}</h2>
        )}
        {subtitle && (
          <p class="text-gray-600 max-w-2xl mx-auto">{subtitle}</p>
        )}
      </div>
    )}
    <slot />
  </div>
</section>
