---
interface Props {
  title: string;
  date: string;
  time?: string;
  location?: string;
  description?: string;
  link?: string;
  isPast?: boolean;
}

const { title, date, time, location, description, link, isPast = false } = Astro.props;

// Parse date for display
const dateObj = new Date(date);
const month = dateObj.toLocaleDateString('en-US', { month: 'short' });
const day = dateObj.getDate();
---

<div class={`flex gap-4 p-4 rounded-xl border ${isPast ? 'bg-gray-50 border-gray-100' : 'bg-white border-gray-100 hover:border-hxa-green/30'} transition-all duration-300`}>
  <div class={`flex-shrink-0 w-16 h-16 rounded-lg flex flex-col items-center justify-center ${isPast ? 'bg-gray-200 text-gray-500' : 'bg-hxa-green text-white'}`}>
    <span class="text-xs font-semibold uppercase">{month}</span>
    <span class="text-2xl font-bold leading-none">{day}</span>
  </div>

  <div class="flex-1 min-w-0">
    <h3 class={`font-headline font-bold ${isPast ? 'text-gray-600' : 'text-charcoal'}`}>{title}</h3>

    <div class={`flex flex-wrap gap-x-4 gap-y-1 text-sm mt-1 ${isPast ? 'text-gray-400' : 'text-gray-500'}`}>
      {time && (
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          {time}
        </span>
      )}
      {location && (
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          {location}
        </span>
      )}
    </div>

    {description && (
      <p class={`text-sm mt-2 leading-relaxed ${isPast ? 'text-gray-400' : 'text-gray-600'}`}>{description}</p>
    )}

    {link && !isPast && (
      <a href={link} class="inline-flex items-center gap-1 text-sm font-medium text-hxa-green hover:text-accent-green mt-2 transition-colors">
        Learn more
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    )}
  </div>
</div>
