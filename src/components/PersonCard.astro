---
interface Props {
  name: string;
  role: string;
  department?: string;
  bio?: string;
  image?: string;
  email?: string;
}

const { name, role, department, bio, image, email } = Astro.props;
---

<div class="bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300">
  <div class="aspect-square bg-light-purple flex items-center justify-center overflow-hidden">
    {image ? (
      <img
        src={image}
        alt={name}
        class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
      />
    ) : (
      <div class="w-24 h-24 rounded-full bg-hxa-purple/20 flex items-center justify-center">
        <span class="text-3xl font-headline font-bold text-hxa-purple">
          {name.split(' ').map(n => n[0]).join('')}
        </span>
      </div>
    )}
  </div>

  <div class="p-5">
    <h3 class="font-headline font-bold text-lg text-charcoal">{name}</h3>
    <p class="text-hxa-green font-medium text-sm">{role}</p>
    {department && (
      <p class="text-gray-500 text-sm mt-1">{department}</p>
    )}
    {bio && (
      <p class="text-gray-600 text-sm mt-3 leading-relaxed">{bio}</p>
    )}
    {email && (
      <a href={`mailto:${email}`} class="inline-flex items-center gap-1 text-sm text-hxa-green hover:text-accent-green mt-3 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Contact
      </a>
    )}
  </div>
</div>
