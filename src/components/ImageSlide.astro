---
// ImageSlide - Full-viewport image section for scroll-through experience
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<section class="image-slide">
  <img src={src} alt={alt} class="slide-image" />
  <div class="scroll-indicator">
    <span class="scroll-arrow">â†“</span>
  </div>
</section>

<style>
  .image-slide {
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #1a1a1a;
    position: relative;
    scroll-snap-align: start;
    overflow: hidden;
  }

  .slide-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    inset: 0;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    animation: bounce 2s infinite;
    z-index: 10;
  }

  .scroll-arrow {
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.6);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }
</style>
