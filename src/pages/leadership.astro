---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import PersonCard from '../components/PersonCard.astro';
import Icon from '../components/Icon.astro';
---

<Layout title="Leadership">
  <Hero title="Leadership" />

  <!-- Co-Chairs Section -->
  <section class="py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="font-headline text-2xl text-charcoal mb-8">Co-Chairs</h2>

      <div class="grid md:grid-cols-2 gap-6 max-w-2xl">
        <PersonCard
          name="Professor Andrew Latham"
          role="Co-Chair"
          department="Political Science Department"
          bio="Professor Latham specializes in international relations, medieval political theory, and the politics of war."
          email="latham@macalester.edu"
        />
        <PersonCard
          name="Matthew Allaire"
          role="Co-Chair"
          department="Political Science & Computer Science"
          bio="Focused on bridging political divides and promoting productive dialogue on campus."
          email="mallaire@macalester.edu"
        />
      </div>
    </div>
  </section>

  <!-- Get Involved Section -->
  <section class="py-16 md:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-headline text-2xl text-charcoal mb-4">Join Our Team</h2>
      <p class="text-gray-600 mb-8 leading-relaxed">
        We're always looking for students who want to help build a culture of open inquiry on campus. Leadership positions include event planning, outreach, and communications.
      </p>
      <a href="mailto:hxa@macalester.edu?subject=Leadership%20Interest" class="inline-flex items-center gap-2 bg-hxa-green text-white px-5 py-2.5 rounded-md font-medium hover:bg-accent-green transition-colors">
        <Icon name="mail" class="w-4 h-4" />
        Express Interest
      </a>
    </div>
  </section>
</Layout>
